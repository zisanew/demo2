@{
    ViewBag.Title = "材料管理";
    Layout = "~/Views/Shared/_LayoutList.cshtml";
}
<!--搜索区域-->
<div class="layui-row">
    <form class="layui-form layui-col-md12 ok-search">
        <div class="layui-input-inline">
            <input class="layui-input" name="MaterialName" placeholder="请输入材料名称" autocomplete="off">
        </div>
        <div class="layui-input-inline">
            <input class="layui-input" name="MaterialCode" placeholder="请输入材料编码" autocomplete="off">
        </div>
        <button class="layui-btn layui-btn-sm layui-btn-normal btn-search" lay-submit lay-filter="search">
            <i class='layui-icon'>&#xe615;</i>查询
        </button>
        <button class="layui-btn layui-btn-sm layui-btn-primary" id="resetSearch">重置</button>
    </form>
</div>
<!--数据表格-->
<table class="layui-hide" id="tableId" lay-filter="tableFilter"></table>
<script type="text/javascript">
    layui.use(["table", "form", "okLayer", "okUtils"], function () {
        let table = layui.table;
        let form = layui.form;
        let okLayer = layui.okLayer;
        let okUtils = layui.okUtils;
        let isCleaning = false;

        let tableInit = table.render({
            elem: "#tableId",
            url: "/api/Materials",
            limit: 10,
            height: "full-" + searchHeight(),
            page: true,
            toolbar: "#toolbarTpl",
            defaultToolbar: ["filter", "exports"],
            size: "xs",
            cols: [[
                { type: "checkbox" },
                { title: "操作", align: "center", templet: "#toolTpl", width: 65 },
                { field: "materialName", title: "材料名称", sort: true },
                { field: "materialCode", title: "材料编码", sort: true },
                { field: "materialType", title: "属性", sort: true },
                { field: "quality", title: "材质", sort: true },
                { field: "spec", title: "规格", sort: true },
                { field: "brand", title: "厂牌", sort: true },
                { field: "unit", title: "单位", sort: true },
                { field: "qty", title: "数量", sort: true },
                { field: "price", title: "材料单价", sort: true },
                { field: "wagesPrice", title: "工资单价", sort: true },
                { field: "typeName", title: "总价", sort: true },
                { field: "supplier", title: "供应商", sort: true },
                { field: "contactPhone", title: "联系电话", sort: true },
                { field: "remark", title: "备注", sort: true }
            ]],
            where: $("form").serializeObject(),
            request: {
                pageName: "PageIndex",
                limitName: "PageSize"
            }
        });

        table.on("toolbar(tableFilter)", function (obj) {
            switch (obj.event) {
                case "btn-add":
                    okLayer.open("新增材料", "/api/Materials/Form", "80%", "80%", null, null);
                    break;

                 case "btn-dataCleaning":
                    okLayer.confirm("确定要执行数据清洗吗？\n此操作将删除重复数据，可能需要一段时间，请耐心等待。", function () {
                        isCleaning = true;
                        let loadingIndex = layer.load(0, { shade: false });

                        okUtils.ajax("/api/Materials/DataCleaning", "post", null, true).done(function (res) {
                            okLayer.greenTickMsg(res.message, null, 2000);
                            tableInit.reload();
                        }).fail(function (error) {
                            okLayer.redCrossMsg("数据清洗失败：" + (error.message || "网络错误"));
                            console.log(error);
                        })
                        .always(function () {
                            layer.close(loadingIndex);
                            isCleaning = false;
                        });
                    });
                    break;

                 case "btn-downloadTemplet":
                    window.location.href = "/api/Materials/DownloadTemplate?templateName=材料导入模板.xlsx";
                    break;

                 case "btn-importExcel":
                    break;

                case "btn-batchDel":
                    var idArray = [];
                    $(table.checkStatus(obj.config.id).data).each(function (index, item) {
                        idArray.push(item.id);
                    });
                    if (idArray.length === 0) {
                        return okLayer.yellowSighMsg("请选择要删除的数据");
                    }

                    const requestData = { data: idArray };

                    okLayer.confirm("确定要删除吗？", function () {
                        okUtils.ajax("/api/Materials/Delete", "post", requestData, true).done(function (res) {
                            okUtils.tableSuccessMsg(res.message);
                        }).fail(function (error) {
                            console.log(error);
                        });
                    });
                    break;
            }
        });

        table.on("tool(tableFilter)", function (obj) {
            let data = obj.data;
            switch (obj.event) {
                case "btn-edit":
                    okLayer.open("编辑材料", "/api/Materials/Form?id=" + data.id, "80%", "80%", null, null);
                    break;
            }
        });

        form.on("submit(search)", function (data) {
            tableInit.reload({
                where: data.field,
                page: { curr: 1 }
            });
            return false;
        });
    });
</script>
<!-- 头工具栏模板 -->
<script type="text/html" id="toolbarTpl">
    <button class="layui-btn layui-btn-xs layui-btn-normal" lay-event="btn-add">新增</button>
    <button class="layui-btn layui-btn-xs layui-btn-normal" lay-event="btn-downloadTemplet">下载导入模板</button>
    <button class="layui-btn layui-btn-xs layui-btn-normal" lay-event="btn-importExcel">导入数据</button>
    <button class="layui-btn layui-btn-xs layui-btn-warm" lay-event="btn-dataCleaning">数据清洗</button>
    <button class="layui-btn layui-btn-xs layui-btn-normal" lay-event="btn-batchDel">批量删除</button>
</script>
<!-- 行工具栏模板 -->
<script type="text/html" id="toolTpl">
    <button class="layui-btn layui-btn-xs layui-btn-normal" lay-event="btn-edit">编辑</button>
</script>