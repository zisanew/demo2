@model HJ.EngineeringCost.Web.Models.SysUser
@{
    Layout = "~/Views/Shared/_LayoutForm.cshtml";
    var url = Model?.Id == null ? "/api/SysUser/Create" : "/api/SysUser/Update";
}
<form class="layui-form layui-form-pane ok-form" lay-filter="formSave">
    <input type="hidden" name="Id" value="@Model?.Id" />
    <div class="layui-form-item">
        <div class="pl-form-line">
            <label class="layui-form-label xrequired">用户名</label>
            <div class="pl-form-input-block">
                <input name="UserName" value="@Model?.UserName" class="layui-input" type="text" placeholder="请输入用户名" autocomplete="off" lay-verify="required" />
            </div>
        </div>
        <div class="pl-form-line">
            <label class="layui-form-label">昵称</label>
            <div class="pl-form-input-block">
                <input name="NickName" value="@Model?.NickName" class="layui-input" type="text" placeholder="请输入昵称" autocomplete="off" />
            </div>
        </div>
        <div class="pl-form-line">
            <label class="layui-form-label">真实姓名</label>
            <div class="pl-form-input-block">
                <input name="RealName" value="@Model?.RealName" class="layui-input" type="text" placeholder="请输入真实姓名" autocomplete="off" />
            </div>
        </div>
        <div class="pl-form-line">
            <label class="layui-form-label">邮箱</label>
            <div class="pl-form-input-block">
                <input name="Email" value="@Model?.Email" class="layui-input" type="text" placeholder="请输入邮箱" autocomplete="off" />
            </div>
        </div>
        <div class="pl-form-line">
            <label class="layui-form-label">状态</label>
            <div class="pl-form-input-block">
                <input name="UserStatus" value="@Model?.UserStatus" class="layui-input" type="text" placeholder="请输入状态" autocomplete="off" />
            </div>
        </div>
        <div class="pl-form-line">
            <label class="layui-form-label">手机号</label>
            <div class="pl-form-input-block">
                <input name="Phone" value="@Model?.Phone" class="layui-input" type="text" placeholder="请输入手机号" autocomplete="off" />
            </div>
        </div>
        <div class="pl-form-line">
            <label class="layui-form-label xrequired">用户角色</label>
            <div class="pl-form-input-block">
                <input name="RoleId" value="@Model?.RoleId" class="layui-input" type="text" placeholder="请输入用户角色" autocomplete="off" lay-verify="required" />
            </div>
        </div>
    </div>
    <div class="fixed-buttons">
        <button class="layui-btn layui-btn-sm layui-btn-normal" lay-submit lay-filter="save">保存</button>
        <button type="button" class="layui-btn layui-btn-sm layui-btn-primary" id="close">取消</button>
    </div>
</form>
<script type="text/javascript">
    layui.use(["form", "okLayer", "okUtils"], function () {
        let form = layui.form;
        let okLayer = layui.okLayer;
        let okUtils = layui.okUtils;

        form.on("submit(save)", function (data) {
            const requestData = {
                data: [data.field]
            };

            okUtils.ajax("@url", "post", requestData, true).done(function (res) {
                okLayer.greenTickMsg(res.message, CloseWin);
            }).fail(function (error) {
                console.log(error);
            });
            return false;
        });
    });
</script>